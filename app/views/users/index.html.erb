<div class="body">
  <div class="container">
    <div class="row">

      <!-- 部分テンプレート -->
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= render "users/list-u-show", user: current_user %>
        <h2>New book</h2>

        <!-- 部分テンプレ_list.html入れてみた -->
        <div>
          <%= form_for(@book) do |f| %>
            <!--Alert-->
            <% if @book.errors.any? %>
              <div class="alert alert-warning">
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field row">
              <label for="book_title">Title</label>
                <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
            </div>
            <div class="field row">
              <label for="book_opinion">Opinion</label>
              <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>  
            </div>
            <div class="actions row">
              <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
            </div>
          <% end %>
        </div>
      </div>

      <!-- 主 -->
      <div class="col-xs-9">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr valign = "top">
          	 <th width = "200" height = "20">image</th>
              <th width = "200" height = "20">name</th>
              <th width = "400" height = "20"></th>
              <th colspan = "3"></th>
            </tr>
    		  </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><a class = "show-icon">
                  <%= link_to "Show", user_path(user.id) %>
                </a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>