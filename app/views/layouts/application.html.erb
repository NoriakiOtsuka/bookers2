<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head> 

  <body>
    <!-- header -->
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="no-margin" style="font-size: 20px;">
            Bookers
          </span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <i class="glyphicon glyphicon-home"> Home</i>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <i class="glyphicon glyphicon-user"> Users</i>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
                <i class="glyphicon glyphicon-book"> Books</i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="glyphicon glyphicon-log-out"> logout</i>
              <% end %>
            </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                  <i class="glyphicon glyphicon-home"> Home</i>
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path do %>
                  <i class="glyphicon glyphicon-link about"> About</i>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <i class="glyphicon glyphicon-edit sign_up"> Sign up</i>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="glyphicon glyphicon-log-in"> login</i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>>  
    </header>

    <!-- notice -->
    <%= render 'layouts/notification' %>
    
    <%= yield %>
    
    <!-- footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRigth Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
